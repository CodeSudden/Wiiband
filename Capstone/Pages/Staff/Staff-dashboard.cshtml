        font-size: 3rem;
        color: #007bff;
        margin-right: 20px;
    }

    .info-text h5 {
        font-size: 1.8rem;
        margin: 0;
        font-weight: bold;
    }

    .info-text p {
        margin: 0;
        color: #6c757d;
    }

    .transaction-table {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        padding: 20px;
    }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .table-header h3 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 700;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px 15px;
