@page
@model Capstone.Pages.Staff.Staff_dashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_StaffLayout";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Dashboard - Fiesta Carnival</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="info-card shadow-hover">
                <i class="bi bi-calendar-check icon"></i>
                <div class="info-text">
                    <h5>@DateTime.Now.ToString("MMMM")</h5> <!-- Display current month -->
                    <p>@DateTime.Now.Year</p> <!-- Display current year -->
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="info-card shadow-hover">
                <i class="bi bi-people-fill icon"></i>
                <div class="info-text">
                    <h5>@Model.TotalJumpers</h5>
                    <p>Visitors</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="info-card shadow-hover">
                <i class="bi bi-watch icon"></i>
                <div class="info-text">
                    <h5>9</h5>
                    <p>Active now</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="info-card shadow-hover">
                <i class="bi bi-cash-stack icon"></i>
                <div class="info-text">
                    <h5>@Model.TotalSalesToday.ToString("C")</h5>
                    <p>Total Sales</p>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between mb-4">
        <h3>Transaction</h3>
        <form method="post">
            <select name="StatusFilter" class="form-select w-auto" onchange="this.form.submit()">
                <option value="">All</option>
                <option value="Online" selected="@((Model.StatusFilter == "Online") ? true : false)">Online</option>
                <option value="Offline" selected="@((Model.StatusFilter == "Offline") ? true : false)">Offline</option>
            </select>
        </form>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="transaction-table">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="transactionTable">
                        <thead class="table-primary">
                            <tr>
                                <th>Transaction Number</th>
                                <th>Wiiband</th>
                                <th>Customer Name</th>
                                <th>Email</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Remaining Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.DashboardEntries != null && Model.DashboardEntries.Count > 0)
                            {
                                @foreach (var entry in Model.DashboardEntries)
                                {
                                    <tr>
                                        <td>@entry.TransactionNumber</td>
                                        <td>@entry.WiibandID</td>
                                        <td>@entry.CustomerName</td>
                                        <td>@entry.Email</td>
                                        <td>@entry.StartTime?.ToString(@"hh\:mm")</td>
                                        <td>@entry.EndTime?.ToString(@"hh\:mm")</td>
                                        <td>@entry.RemainingTime</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    <script>
        function fetchTransactionUpdate() {
            $.ajax({
                url: '/api/StaffDashboard/GetTransactionUpdate',
                type: 'POST',
                contentType: 'application/json',
                success: function (data) {
                    const tableBody = document.querySelector("#transactionTable tbody");
                    tableBody.innerHTML = ''; // Clear the existing table rows

                    // Populate table with new data
                    data.forEach(transaction => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <td>${transaction.TransactionNumber}</td>
                            <td>${transaction.WiibandID || 'N/A'}</td>
                            <td>${transaction.CustomerName || 'N/A'}</td>
                            <td>${transaction.Email || 'N/A'}</td>
                            <td>${transaction.StartTime || 'N/A'}</td>
                            <td>${transaction.EndTime || 'N/A'}</td>
                            <td>${transaction.RemainingTime || 'N/A'}</td>
                            <td>${transaction.Status || 'N/A'}</td>
                            <td>${transaction.BatteryLevel || 'N/A'}%</td>
                        `;
                        tableBody.appendChild(row);
                    });
                },
                error: function (error) {
                    console.error("Error fetching transaction updates:", error);
                }
            });
        }

</script>


<!-- Enhanced Minimalist CSS Style -->
