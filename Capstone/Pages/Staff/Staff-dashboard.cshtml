        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        padding: 20px;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .info-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

