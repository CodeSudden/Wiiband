    }

    /* Hover Effect for Shadows */
    .shadow-hover {
        transition: box-shadow 0.3s ease;
    }

    .shadow-hover:hover {
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .info-card {
            flex-direction: column;
            text-align: center;
        }

        .info-card .icon {
            margin-bottom: 10px;
        }

        .info-text h5 {
            font-size: 1.5rem;
        }
    }
</style>
