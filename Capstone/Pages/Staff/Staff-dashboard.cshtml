        }

        /* Remove borders and radius in the middle */
        .table, .table th, .table td {
            border: none; /* Remove inner table borders */
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9; /* Light gray for alternating rows */
        }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            font-size: 0.9rem;
        }

       

        /* Unified bottom border for a clean look */
        .table th, .table td {
            border-top: 1px solid #ddd;
        }

        /* Remove border radius from the middle edges */
        .transaction-table:first-of-type {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .transaction-table:last-of-type {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }

    th, td {
        padding: 12px 15px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }

    td {
        color: #555;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
        border-radius: 12px;
        font-weight: 600;
    }

    /* Hover Effect for Shadows */
    .shadow-hover {
        transition: box-shadow 0.3s ease;
    }

        .shadow-hover:hover {
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

    /* Responsive styles */
        @@media (max-width: 768px) {
            .row .col-md-6 {
                width: 100%;}
        .info-card {
            flex-direction: column;
            text-align: center;
        }

            .info-card .icon {
                margin-bottom: 10px;
            }

        .info-text h5 {
            font-size: 1.5rem;
        }
    }
</style>