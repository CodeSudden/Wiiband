@page
@model Capstone.Pages.Admin.Addons.StaffModel
@{
    ViewData["Title"] = "Staff Management";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h2 class="mb-4">Staff Management</h2>
    <div class="mb-3">
        <a asp-page="/Admin/Addons/AddStaff" class="btn btn-primary">Add New Staff</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Access</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Shift</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model.StaffList)
                    {
                        <tr>
                            <td>@staff.DisplayName</td>
                            <td>@staff.Type</td> <!-- Assuming you want to show access level -->
                            <td>@staff.Username</td>
                            <td>@staff.EmailAddress</td>
                            <td>@staff.ContactNum</td>
                            <td>@staff.Shift</td>
                            <td>
                                <a asp-page="/Admin/EditStaff" asp-route-id="@staff.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@staff.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Additional styles can be added here */
</style>
