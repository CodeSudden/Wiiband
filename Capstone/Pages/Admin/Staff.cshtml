@page
@model Capstone.Pages.Admin.Addons.StaffModel
@{
    ViewData["Title"] = "Staff Management";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h2 class="mb-4">Staff Management</h2>
    <div class="mb-3">
        <!-- Correct the routing to the AddStaff page -->
        <a asp-page="/Admin/Addons/AddStaff" class="btn btn-primary">Add New Staff</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Access</th>
                        <th>Username</th>
                        <th>Contact Number</th>
                        <th>Shift</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model.StaffMembers)
                    {
                        <tr>
                            <td>@staff.Name</td>
                            <td>@staff.AccessLevel</td>
                            <td>@staff.Username</td>
                            <td>@staff.ContactNumber</td>
                            <td>@staff.Shift</td>
                            <td>
                                <a asp-page="/Admin/EditStaff" asp-route-id="@staff.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="/Admin/DeleteStaff" asp-route-id="@staff.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Additional styles can be added here */
</style>
