<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <!-- FullCalendar CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/main.min.css" rel="stylesheet" />

    <!-- jQuery (required for FullCalendar) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- Custom styles -->
    <link href="~/css/site.css" rel="stylesheet" />

</head>

<body>
    <!-- SIDEBAR -->
    <div class="d-flex">
        <nav id="sidebar" class="sidebar-light">
            <div class="p-4">
                <a href="/Index" class="navbar-brand d-flex align-items-center">
                    <img src="~/img/icon.png" alt="logo" height="50" width="50" class="me-2 no-circle" />
                    <span class="h5 mb-0">WIIJUMP</span>
                </a>
                <ul class="nav flex-column mt-4">
                    <li class="nav-item">
                        <a asp-page="/Admin/Admin-Dashboard" class="nav-link d-flex align-items-center @((ViewContext.RouteData.Values["page"].ToString() == "/Admin/Admin-Dashboard") ? "active" : "")">
                            <i class="bi bi-clipboard-data me-3"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Admin/Analytics" class="nav-link d-flex align-items-center @((ViewContext.RouteData.Values["page"].ToString() == "/Admin/Analytics") ? "active" : "")">
                            <i class="bi bi-graph-up me-3"></i> Analytics
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Admin/Event" class="nav-link d-flex align-items-center @((ViewContext.RouteData.Values["page"].ToString() == "/Admin/Event") ? "active" : "")">
                            <i class="bi bi-calendar-check me-3"></i> Event
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Admin/Messages" class="nav-link d-flex align-items-center @((ViewContext.RouteData.Values["page"].ToString() == "/Admin/Messages") ? "active" : "")">
                            <i class="bi bi-chat-left-dots me-3"></i> Messages
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Admin/Staff" class="nav-link d-flex align-items-center @((ViewContext.RouteData.Values["page"].ToString() == "/Admin/Staff") ? "active" : "")">
                            <i class="bi bi-person-fill me-3"></i> Staff
                        </a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-page="/Admin/Settings" class="nav-link d-flex align-items-center @((ViewContext.RouteData.Values["page"].ToString() == "/Admin/Settings") ? "active" : "")">
                            <i class="bi bi-gear me-3"></i> Settings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Logout" class="nav-link text-danger d-flex align-items-center">
                            <i class="bi bi-box-arrow-left me-3"></i> Logout
                        </a>
                    </li>
                    <li class="nav-item fixed-bottom">
                        <a asp-page="" class="nav-link d-flex align-items-center @((ViewContext.RouteData.Values["page"].ToString() == "") ? "active" : "")">
                            <img src="~/img/sample_admin.png" alt="Profile Picture" height="40" width="40" class="rounded-circle me-2 border-image">
                            <div class="d-flex flex-column ms-2">
                                <span class="fw-bold">Admin</span>
                                <span class="text-muted smaller-text">Admin</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- MAIN CONTENT -->
        <div id="content" class="w-100 p-1">
            <!-- Razor page content injected here -->
            <div class="container-fluid mt-1">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>

<style>
    .border-image {
        border: 3px solid #007bff;
    }

    .fixed-bottom {
        position: fixed;
        bottom: 0;
        width: 18.3%;
        padding: 10px; /* Adjust padding as needed */
    }

    .smaller-text {
        font-size: 13px;
    }
</style>